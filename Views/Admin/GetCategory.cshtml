@model uNeed.Models.Entity.Category
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("UpdateCategory", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryID)
            @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control" })
            <br />
            @Html.LabelFor(m => m.CategoryName)
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            <br />
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-info">
                UPDATE CATEGORY
            </button>
        </div>
    }

</div>


